{
  "name": "@claude-nexus/analysis-worker",
  "version": "1.0.0",
  "description": "Background worker for AI-powered conversation analysis",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:watch": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "start:prod": "NODE_ENV=production bun dist/index.js",
    "typecheck": "tsc --build",
    "lint": "eslint src/**/*.ts",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claude-nexus/shared": "workspace:*",
    "@google/generative-ai": "^0.21.0",
    "p-limit": "^6.1.0",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/pg": "^8.11.10"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
