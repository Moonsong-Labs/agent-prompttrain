{
  "name": "@claude-nexus/dashboard",
  "version": "2.0.0",
  "private": true,
  "description": "Claude Nexus Dashboard Service - Web UI for monitoring and analytics",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "claude-nexus-dashboard": "./dist/main.js"
  },
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "build": "bun scripts/build.ts",
    "build:dev": "bun scripts/build.ts --dev",
    "build:production": "bun scripts/build.ts",
    "start": "bun dist/index.js",
    "start:prod": "bun dist/index.js",
    "typecheck": "bunx tsc --build ../../packages/shared && bunx tsc --build",
    "lint": "eslint src/**/*.ts",
    "test": "bun test",
    "clean": "rm -rf dist tsconfig.tsbuildinfo ../../packages/shared/dist ../../packages/shared/tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@claude-nexus/shared": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "elkjs": "^0.10.0",
    "hono": "^4.6.13",
    "marked": "^15.0.12",
    "node-cache": "^5.1.2",
    "sanitize-html": "^2.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/sanitize-html": "^2.16.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
