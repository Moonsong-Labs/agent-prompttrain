{
  "$schema": "https://json.schemastore.org/tsconfig",
  // TypeScript configuration for the dashboard service in the Claude Nexus Proxy monorepo
  // This service provides the monitoring UI, analytics, and request history browser
  // It depends on the shared package via TypeScript project references
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Language and Environment - Override base to use ES2022 for consistency
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],

    // Output Configuration - This service emits built files
    "outDir": "./dist",
    "rootDir": "./",

    // Type Checking and Emit
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate sourcemaps for declarations
    "composite": true, // Enable project references
    "noEmit": false, // Override base to allow emit for project references

    // Module Resolution
    "resolveJsonModule": true,
    "esModuleInterop": true, // Required for default imports from CommonJS modules
    "baseUrl": ".",
    "paths": {
      "@claude-nexus/shared": ["../../packages/shared/src/index.ts"],
      "@claude-nexus/shared/*": ["../../packages/shared/src/*"]
    },

    // Type Dependencies
    "types": ["node", "bun-types"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/shared" }]
}
