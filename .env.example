# Claude Nexus Environment Configuration Example
# Copy this file to .env and update with your values

# ===================
# Proxy Service
# ===================

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Claude API Configuration
CLAUDE_API_KEY=sk-ant-api03-your-key-here
CREDENTIALS_DIR=credentials

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/claude_proxy
STORAGE_ENABLED=true

# Telemetry (optional)
TELEMETRY_ENDPOINT=

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#general
SLACK_USERNAME=Claude Nexus Proxy
SLACK_ICON_EMOJI=:robot_face:
SLACK_ENABLED=true

# Debug Mode
DEBUG=false

# ===================
# Dashboard Service
# ===================

# Dashboard Server
DASHBOARD_PORT=3001
DASHBOARD_HOST=0.0.0.0

# Dashboard Authentication (required)
DASHBOARD_API_KEY=your-secret-dashboard-key

# Proxy Service URL (for real-time updates)
PROXY_SERVICE_URL=http://localhost:3000