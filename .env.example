# Claude Code Proxy Configuration

# Proxy mode: 'translation' or 'passthrough'
PROXY_MODE=passthrough

# API Keys (for passthrough mode)
CLAUDE_API_KEY=sk-ant-api03-your-default-key

# Domain to credential file mapping
# Each domain maps to a JSON credential file
# Paths: relative (to working dir), absolute, or ~ (home)
DOMAIN_CREDENTIAL_MAPPING={"claude-1.example.com":"credentials/team1.json","claude-2.example.com":"credentials/team2-oauth.json","claude-3.example.com":"~/Documents/claude/team3.json"}

# Telemetry endpoint for usage tracking
TELEMETRY_ENDPOINT=https://your-telemetry-server.com/api/events

# Translation mode settings (when PROXY_MODE=translation)
ANTHROPIC_PROXY_BASE_URL=https://models.github.ai/inference
CLAUDE_CODE_PROXY_API_KEY=your-github-token
REASONING_MODEL=openai/gpt-4.1
COMPLETION_MODEL=openai/gpt-4.1
REASONING_MAX_TOKENS=4096
COMPLETION_MAX_TOKENS=2048

# Debug logging
DEBUG=false

# Slack Integration (optional)
# Send user and assistant messages to Slack channel
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX
SLACK_CHANNEL=#claude-proxy-logs
SLACK_USERNAME=Claude Nexus Proxy
SLACK_ICON_EMOJI=:robot_face:
SLACK_ENABLED=true

# Server configuration (for CLI mode only)
PORT=3000
HOST=0.0.0.0