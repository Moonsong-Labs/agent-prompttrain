{
  "$schema": "https://json.schemastore.org/tsconfig",
  // Root TypeScript configuration for the Claude Nexus Proxy monorepo
  // This file serves as the orchestrator for TypeScript project references
  // It does not contain source files itself, but coordinates builds across all packages
  // Use `tsc --build` at the root to type check the entire monorepo
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true, // Enable project references
    "noEmit": true, // Don't emit outputs at root level
    "allowImportingTsExtensions": true // Allow .ts imports (Bun feature, safe with noEmit)
  },
  "files": [], // No source files at root
  "references": [
    // List all packages and services in the monorepo
    { "path": "./packages/shared" },
    { "path": "./services/dashboard" },
    { "path": "./services/proxy" }
  ]
}
