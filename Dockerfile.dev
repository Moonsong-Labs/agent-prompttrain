# Development Dockerfile with hot reload
FROM oven/bun:1-alpine

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install all dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Create directories
RUN mkdir -p credentials

EXPOSE 3000

# Run with hot reload
CMD ["bun", "run", "--hot", "src/server.ts"]